{
  "name": "math-super-game",
  "version": "2.0.0",
  "description": "Educational math game with visual block learning for children aged 7-8",
  "main": "src/js/app.js",
  "scripts": {
    "dev": "node tools/dev-server.js",
    "build": "node tools/build.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --coverageThreshold='{\"global\":{\"branches\":80,\"functions\":80,\"lines\":80,\"statements\":80}}'",
    "test:e2e": "playwright test",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "format": "prettier --write src/ tests/",
    "validate": "npm run lint && npm run test:coverage",
    "deploy": "npm run validate && npm run build"
  },
  "keywords": [
    "education",
    "math",
    "game",
    "children",
    "learning",
    "blocks",
    "visualization"
  ],
  "author": "Math Super Game Team",
  "license": "MIT",
  "devDependencies": {
    "@testing-library/dom": "^8.19.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/user-event": "^14.4.3",
    "eslint": "^8.0.0",
    "express": "^4.21.2",
    "jest": "^29.0.0",
    "jsdom": "^20.0.0",
    "playwright": "^1.28.0",
    "prettier": "^2.8.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom/extend-expect"
    ],
    "collectCoverageFrom": [
      "src/js/**/*.js",
      "!src/js/app.js"
    ]
  }
}
